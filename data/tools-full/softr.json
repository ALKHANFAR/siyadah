        {
          "name": "email",
          "displayName": "Email",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The email address of the new user."
        },
        {
          "name": "full_name",
          "displayName": "Name",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The full name of the new user."
        },
        {
          "name": "password",
          "displayName": "Password",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The password for the new user."
        },
        {
          "name": "domain",
          "displayName": "Domain",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The domain or subdomain of the Softr app where the user will be created."
        },
        {
          "name": "generate_magic_link",
          "displayName": "Generate Magic Link",
          "type": "CHECKBOX",
          "required": false,
          "description": "If checked, a magic link will be generated for the user."
        }
      ]
    },
