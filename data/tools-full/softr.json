        {
          "name": "email",
          "displayName": "User Email",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The email address of the user to delete."
        },
        {
          "name": "domain",
          "displayName": "Softr Domain",
          "type": "SHORT_TEXT",
