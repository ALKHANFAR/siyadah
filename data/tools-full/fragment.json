{
  "id": "fragment",
  "displayName": "Fragment",
  "auth": {
    "type": "secret_text"
  },
  "actions": {
    "create_task": {
      "displayName": "Create Task",
      "description": "Creates a new task in Fragment.",
      "props": [
        {
          "name": "title",
          "displayName": "Title",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The title of the task"
        },
        {
          "name": "url",
          "displayName": "URL",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "A URL associated with the task (e.g., link to a ticket or resource)"
        },
        {
          "name": "due_at",
          "displayName": "Due Date",
          "type": "DATE_TIME",
          "required": false,
          "description": "When the task is due"
        },
        {
          "name": "assignee",
          "displayName": "Assignee",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Email of the person to assign this task to."
        },
        {
          "name": "tags",
          "displayName": "Tags",
          "type": "ARRAY",
          "required": false,
          "description": "Tags to categorize the task"
        },
        {
          "name": "custom_fields",
          "displayName": "Custom Fields",
          "type": "OBJECT",
          "required": false,
          "description": "Additional custom fields for the task"
        }
      ]
    },
    "custom_api_call": {
      "displayName": "Custom API Call",
      "description": "Make a custom API call",
      "props": []
    },
    "delete_task": {
      "displayName": "Delete Task",
      "description": "Deletes an existing task.",
      "props": [
        {
          "name": "task_uid",
          "displayName": "Task UID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The unique identifier of the task to delete"
        }
      ]
    },
    "get_task": {
      "displayName": "Get Task",
      "description": "Retrieves details of a specific task.",
      "props": [
        {
          "name": "task_uid",
          "displayName": "Task UID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The unique identifier of the task to retrieve"
        }
      ]
    },
    "list_tasks": {
      "displayName": "List Tasks",
      "description": "Retrieves a list of tasks from.",
      "props": [
        {
          "name": "status",
          "displayName": "Status",
          "type": "STATIC_DROPDOWN",
          "required": false,
          "description": "Filter tasks by status"
        },
        {
          "name": "assignee",
          "displayName": "Assignee",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Filter tasks by assignee email or ID"
        },
        {
          "name": "limit",
          "displayName": "Limit",
          "type": "NUMBER",
          "required": false,
          "description": "Maximum number of tasks to return (default: 50)"
        }
      ]
    },
    "update_task": {
      "displayName": "Update Task",
      "description": "Updates an existing task.",
      "props": [
        {
          "name": "task_uid",
          "displayName": "Task UID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The unique identifier of the task to update"
        },
        {
          "name": "title",
          "displayName": "Title",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "The updated title of the task"
        },
        {
          "name": "url",
          "displayName": "URL",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "The updated URL for the task"
        },
        {
          "name": "due_at",
          "displayName": "Due Date",
          "type": "DATE_TIME",
          "required": false,
          "description": "The updated due date"
        },
        {
          "name": "status",
          "displayName": "Status",
          "type": "STATIC_DROPDOWN",
          "required": false,
          "description": "The status of the task"
        },
        {
          "name": "assignee",
          "displayName": "Assignee",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Email of the person to assign this task to"
        },
        {
          "name": "tags",
          "displayName": "Tags",
          "type": "ARRAY",
          "required": false,
          "description": "Updated tags for the task"
        },
        {
          "name": "custom_fields",
          "displayName": "Custom Fields",
          "type": "OBJECT",
          "required": false,
          "description": "Updated custom fields"
        }
      ]
    }
  },
  "triggers": {
    "new_task": {
      "displayName": "New Task",
      "description": "Triggers when a new task is created.",
      "type": "POLLING",
      "props": []
    },
    "task_updated": {
      "displayName": "Task Updated",
      "description": "Triggers when a task is updated.",
      "type": "POLLING",
      "props": []
    }
  }
}