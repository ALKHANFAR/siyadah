{
  "id": "zuora",
  "displayName": "Zuora",
  "auth": {
    "type": "custom"
  },
  "actions": {
    "create-invoice": {
      "displayName": "Create Invoice",
      "description": "Create a standalone invoice.",
      "props": [
        {
          "name": "accountNumber",
          "displayName": "Customer Account Number",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The number of the customer account associated with the invoice."
        },
        {
          "name": "autoPay",
          "displayName": "Auto Pay?",
          "type": "CHECKBOX",
          "required": false,
          "description": "Whether invoices are automatically picked up for processing in the corresponding payment run."
        },
        {
          "name": "comments",
          "displayName": "Comments",
          "type": "LONG_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "dueDate",
          "displayName": "Due Date",
          "type": "DATE_TIME",
          "required": true,
          "description": "Provide YYYY-MM-DD format."
        },
        {
          "name": "invoiceDate",
          "displayName": "Invoice Date",
          "type": "DATE_TIME",
          "required": true,
          "description": "Provide YYYY-MM-DD format."
        },
        {
          "name": "invoiceItems",
          "displayName": "Invoice Items",
          "type": "ARRAY",
          "required": false,
          "description": "The ID of the product rate plan charge that the invoice item is created from.You can use `Find Product Rate Plan` action to search associate rate plan charge."
        },
        {
          "name": "productRatePlanChargeId",
          "displayName": "Product Rate Plan Charge ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The ID of the product rate plan charge that the invoice item is created from.You can use `Find Product Rate Plan` action to search associate rate plan charge."
        },
        {
          "name": "amount",
          "displayName": "Amount",
          "type": "NUMBER",
          "required": true,
          "description": ""
        },
        {
          "name": "description",
          "displayName": "Description",
          "type": "LONG_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "purchaseOrderNumber",
          "displayName": "Purchase Order Number",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "quantity",
          "displayName": "Quantity",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "serviceStartDate",
          "displayName": "Service Start Date",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "Provide YYYY-MM-DD format."
        },
        {
          "name": "serviceEndDate",
          "displayName": "Service End Date",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Provide YYYY-MM-DD format."
        },
        {
          "name": "status",
          "displayName": "Status",
          "type": "STATIC_DROPDOWN",
          "required": false,
          "description": ""
        }
      ]
    },
    "find-account": {
      "displayName": "Find Customer Account",
      "description": "Retrieves account based on name.",
      "props": [
        {
          "name": "name",
          "displayName": "Account Name",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        }
      ]
    },
    "find-product-rate-plan": {
      "displayName": "Find Product Rate Plan",
      "description": "Retrieves product rate plan with charges.",
      "props": [
        {
          "name": "name",
          "displayName": "Product Rate Plan Name",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "i.e. StealthCo Premium"
        },
        {
          "name": "productid",
          "displayName": "Product ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        }
      ]
    },
    "find-product": {
      "displayName": "Find Product",
      "description": "Retrieves product based on sku.",
      "props": [
        {
          "name": "sku",
          "displayName": "Product SKU",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        }
      ]
    }
  },
  "triggers": {}
}