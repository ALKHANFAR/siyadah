    "renameSpace": {
      "displayName": "Rename Space",
      "description": "Rename an existing Space.",
      "props": [
        {
          "name": "space_name",
          "displayName": "Space Name",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
