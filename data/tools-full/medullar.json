        {
          "name": "isReasoning",
          "displayName": "Deep Analysis",
          "type": "CHECKBOX",
          "required": false,
          "description": "Optional. Enable Deep Analysis to get more accurate results but slower response time"
        },
        {
          "name": "text",
          "displayName": "Message",
          "type": "LONG_TEXT",
          "required": true,
          "description": "Message to send to the Space"
        }
      ]
