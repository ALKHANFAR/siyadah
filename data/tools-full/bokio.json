        {
          "name": "line2",
          "displayName": "Address line 2",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Customer address line 2"
        },
        {
          "name": "zipCode",
          "displayName": "Zip Code",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Customer zip code"
        },
        {
          "name": "city",
          "displayName": "City",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Customer city"
        },
        {
          "name": "country",
          "displayName": "Country",
          "type": "SHORT_TEXT",
          "required": false,
          "description": "Customer country (ISO 3166-1 alpha-2 country code)"
