      "props": []
    },
    "new_OOO_request": {
      "displayName": "New OOO Request",
      "description": "Triggers when a new OOO request is created.",
      "type": "POLLING",
      "props": []
    },
    "schedule_updated": {
      "displayName": "Schedule Updated",
      "description": "Triggers when user schedule is modified.",
      "type": "POLLING",
      "props": []
    }
  }
