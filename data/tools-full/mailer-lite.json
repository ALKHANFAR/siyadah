        {
          "name": "ip_address",
          "displayName": "Signup IP address",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "optin_ip",
          "displayName": "Opt-in IP address",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        }
      ]
