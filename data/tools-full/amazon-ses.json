          "description": "Verified sender email address"
        },
        {
          "name": "templateName",
          "displayName": "Email Template",
          "type": "DROPDOWN",
          "required": true,
          "description": "Select template to use for this email"
        },
        {
          "name": "templateData",
          "displayName": "Template Variables",
          "type": "OBJECT",
          "required": true,
          "description": "Data to replace template variables (e.g., {\"firstName\": \"John\", \"company\": \"Acme\"})"
        },
        {
          "name": "toAddresses",
          "displayName": "To",
