{
  "id": "copy-ai",
  "displayName": "Copy.ai",
  "auth": {
    "type": "secret_text"
  },
  "actions": {
    "get_workflow_run_outputs": {
      "displayName": "Get Workflow Run Outputs",
      "description": "Retrieves the outputs of a completed workflow run.",
      "props": [
        {
          "name": "workflowId",
          "displayName": "Workflow ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        },
        {
          "name": "runId",
          "displayName": "Run ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The ID of the workflow run to get outputs from."
        }
      ]
    },
    "get_workflow_run_status": {
      "displayName": "Get Workflow Run Status",
      "description": "Retrieves the status of a workflow execution.",
      "props": [
        {
          "name": "workflowId",
          "displayName": "Workflow ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        },
        {
          "name": "runId",
          "displayName": "Run ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The ID of the workflow run to check."
        }
      ]
    },
    "run_workflow": {
      "displayName": "Run Workflow",
      "description": "Start a Copy.ai workflow execution.",
      "props": [
        {
          "name": "workflowId",
          "displayName": "Workflow ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": "The ID of the workflow to run."
        },
        {
          "name": "inputs",
          "displayName": "Workflow Inputs",
          "type": "OBJECT",
          "required": true,
          "description": "The input data for the workflow."
        }
      ]
    }
  },
  "triggers": {
    "workflow_run_completed": {
      "displayName": "Workflow Run Completed",
      "description": "Triggered when a workflow run is completed.",
      "type": "WEBHOOK",
      "props": [
        {
          "name": "workflowId",
          "displayName": "Workflow ID",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        }
      ]
    }
  }
}