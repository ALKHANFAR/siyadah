{
  "id": "peekshot",
  "displayName": "PeekShot",
  "auth": {
    "type": "secret_text"
  },
  "actions": {
    "captureScreenshot": {
      "displayName": "Capture Screenshot",
      "description": "Captures Screenshot of a URL.",
      "props": [
        {
          "name": "url",
          "displayName": "Target URL",
          "type": "SHORT_TEXT",
          "required": true,
          "description": ""
        },
        {
          "name": "width",
          "displayName": "Custom Screenshot Width",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "height",
          "displayName": "Custom Screenshot Height",
          "type": "SHORT_TEXT",
          "required": false,
          "description": ""
        },
        {
          "name": "file_type",
          "displayName": "Image Format",
          "type": "STATIC_DROPDOWN",
          "required": false,
          "description": "Output format for the screenshot."
        },
        {
          "name": "inject_css",
          "displayName": "Custom CSS",
          "type": "LONG_TEXT",
          "required": false,
          "description": "Custom CSS to apply."
        },
        {
          "name": "inject_js",
          "displayName": "Custom JavaScript",
          "type": "LONG_TEXT",
          "required": false,
          "description": "Custom JavaScript to apply."
        },
        {
          "name": "full_page",
          "displayName": "Full Page?",
          "type": "CHECKBOX",
          "required": false,
          "description": "To capture the entire page."
        }
      ]
    },
    "custom_api_call": {
      "displayName": "Custom API Call",
      "description": "Make a custom API call",
      "props": []
    }
  },
  "triggers": {}
}