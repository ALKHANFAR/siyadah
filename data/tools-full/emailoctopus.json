        },
        {
          "name": "instructions",
          "displayName": "instructions",
          "type": "MARKDOWN",
          "required": false,
          "description": ""
        }
      ]
    },
    "email_opened": {
      "displayName": "Email Opened",
      "description": "Triggers when a recipient opens an email from a specified campaign.",
      "type": "WEBHOOK",
      "props": [
        {
          "name": "liveMarkdown",
          "displayName": "liveMarkdown",
          "type": "MARKDOWN",
          "required": false,
          "description": ""
        },
        {
          "name": "instructions",
          "displayName": "instructions",
          "type": "MARKDOWN",
          "required": false,
          "description": ""
        }
      ]
    },
    "newContact": {
      "displayName": "New Contact",
      "description": "Triggers when a new contact is added to a particular list.",
      "type": "WEBHOOK",
      "props": [
        {
          "name": "liveMarkdown",
          "displayName": "liveMarkdown",
          "type": "MARKDOWN",
          "required": false,
          "description": ""
        },
        {
          "name": "instructions",
          "displayName": "instructions",
          "type": "MARKDOWN",
          "required": false,
