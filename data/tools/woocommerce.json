          "type": "SHORT_TEXT",
          "required": true
        },
        {
          "name": "state",
          "displayName": "State",
          "type": "SHORT_TEXT",
          "required": true
        },
        {
          "name": "postcode",
          "displayName": "Postcode",
          "type": "SHORT_TEXT",
          "required": true
        },
        {
          "name": "country",
          "displayName": "Country",
          "type": "SHORT_TEXT",
          "required": true
        },
        {
          "name": "phone",
