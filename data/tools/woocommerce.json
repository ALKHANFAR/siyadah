    {
      "code": "AUTH_FAILED",
      "cause": "Consumer key/secret wrong",
      "auto_fix": "Verify credentials in WooCommerce settings",
      "severity": "high"
    },
    {
      "code": "STORE_UNREACHABLE",
      "cause": "WordPress site down",
      "auto_fix": "Retry with backoff",
      "severity": "high"
    }
  ],
  "limits": null,
  "notes": "WordPress-based ecommerce. Common with smaller stores.",
  "displayName": "WooCommerce"
